<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/act_login_logo_image"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/icn_logo" />

    <LinearLayout
        android:id="@+id/act_login_nonuser_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/act_login_nonuser_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="@string/login_greeting1"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/act_login_signin_button"
            android:layout_width="328dp"
            android:layout_height="42dp"
            android:layout_marginTop="233dp"
            android:background="@drawable/login_button_selector"
            android:text="@string/googlelogin"
            android:textColor="#FFFFFFFF"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_login_user_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/act_login_user_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/signed_greeting_msg"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/act_login_user_image"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/img_profile_none" />

        <TextView
            android:id="@+id/act_login_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="이름"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/act_login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="메일"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="114dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/act_login_nickname_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/nickname_msg"
                android:textColor="#FFFFFFFF"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/act_login_nickname_edit"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="@string/nickname_input"
                    android:inputType="textPersonName"
                    android:textColor="#e6e6e6"
                    android:textColorHint="#FFFFFFFF"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/act_login_nick_input_btn"
                    android:layout_width="49dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="129dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_go"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>